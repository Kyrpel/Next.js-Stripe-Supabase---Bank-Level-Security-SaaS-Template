NEXT_PUBLIC_APP_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# OpenAI Configuration (you'll need to add your key)
OPENAI_API_KEY=

# Stripe Configuration
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_
NEXT_PUBLIC_STRIPE_BUTTON_ID=buy_btn_
# STRIPE_SECRET_KEY=sk_test_
STRIPE_SECRET_KEY=sk_live_
# STRIPE_WEBHOOK_SECRET=whsec_
STRIPE_WEBHOOK_SECRET=whsec_

# ANALYTICS
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ================================
# EMAIL CONFIGURATION (Resend)
# ================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx

# Internal API key for Edge Functions to call email API
# Can be the same as RESEND_API_KEY or a separate secret
INTERNAL_API_KEY=your_internal_api_key_here

# ================================
# CLOUDFLARE SECURITY LAYER
# ================================
# Set to "true" once your domain is proxied through Cloudflare (orange cloud)
CLOUDFLARE_ENABLED=false

# Threat score thresholds (0 = safe, 100 = worst)
# Requests above BLOCK threshold are rejected; above CHALLENGE get flagged
CF_THREAT_SCORE_BLOCK=30
CF_THREAT_SCORE_CHALLENGE=15

# Comma-separated ISO country codes to block (e.g. "KP,IR,CU")
CLOUDFLARE_BLOCKED_COUNTRIES=

# Cloudflare Turnstile (CAPTCHA replacement) – optional
# Get keys at https://dash.cloudflare.com → Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=
